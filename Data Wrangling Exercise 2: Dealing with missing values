titanic_original <- read.csv("titanic_original.csv")
colnames(titanic_original)
titanic_original$embarked
library(dplyr)

# Port of embarkation filled with S
titanic_original$embarked <- as.character(titanic_original$embarked)
embarkedwithS <- titanic_original %>% 
mutate(embarked = ifelse(embarked == '','S',embarked))  
embarkedwithS$embarked

# Missing age filed with Mean Age
titanic_original_age <- filter(embarkedwithS, age != '')
titanic_original_age_mean <- mean(titanic_original_age$age)
titanic_original_fill_mean_age <- embarkedwithS %>% 
mutate(age = ifelse(is.na(age),titanic_original_age_mean,age))
titanic_original_fill_mean_age$age

# Missing passenger with None
titanic_original_empty_boat_None <- titanic_original_fill_mean_age %>% 
mutate(boat = ifelse(boat == '', 'None',boat))
titanic_original_empty_boat_None$boat

# Assign has_cabin_number 1 if there is a cabin number and 0 otherwise.
titanic_original_cabin_num <- titanic_original_empty_boat_None %>% 
mutate(has_cabin_number = ifelse(cabin == '',0,1))
titanic_original_cabin_num$has_cabin_number
